<div class="card border-secondary mb-3">
  <div class="card-header">Datos del Nuevo Asociado</div>
  <div class="card-body">
    <form action="/customers/edit-customer/{{customer._id}}?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT">
      
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name" class="col-sm-3 col-form-label">Nombre</label>
          <div class="col-sm-9">
            <input type="text" class="form-control form-control-sm" id="name" name="name" value="{{customer.name}}">
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="lastName" class="col-sm-3 col-form-label">Apellidos</label>
          <div class="col-sm-9">
            <input type="text" class="form-control form-control-sm" id="lastName" name="lastName" value="{{customer.lastName}}">
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="dni" class="col-sm-3 col-form-label">Dni</label>
          <div class="col-sm-9">
            <input type="text" class="form-control form-control-sm" id="dni" name="dni">
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="email" class="col-sm-3 col-form-label">Correo</label>
          <div class="col-sm-9">
            <input type="text" class="form-control form-control-sm" id="email" name="email">
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="currentProduct" class="col-sm-3 col-form-label">Plan</label>
          <div class="col-sm-9">
            <select class="form-control form-control-sm" id="currentProduct" name="currentProduct">
              {{#each customer.products as |p|}}
              <option value={{p._id}}>{{p.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="startDate" class="col-sm-3 col-form-label">Fecha Inicio</label>
          <div class="col-sm-9">
            <input type="date" class="form-control form-control-sm" id="startDate" name="startDate">
          </div>
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Guardar</button>
      </div>

    </form>
  </div>
</div>